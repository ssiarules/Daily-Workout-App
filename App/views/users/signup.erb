<h1>Signup! </h1>


<h3><% if flash.has?(:message) %>
<%= flash[:message] %>
<% end %>
</h3>


<form action="/signup" method="POST">
<input type="text" class="form-control input-sm chat-input" name="username" placeholder="Username:" />
</br>
<input type="email" class="form-control input-sm chat-input" name="email" placeholder="Email:">
</br>
<input type="password" class="form-control input-sm chat-input" name="password" placeholder="Password:">
</br>

<div class="wrapper">
  <span class="group-btn">
  <input type="submit" value="Sign Up" class="btn btn-primary btn-md">
</div>

  </form>
